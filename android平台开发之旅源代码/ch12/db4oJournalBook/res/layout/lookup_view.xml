<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<TextView android:id="@+id/REVIEW_TITLE"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:padding="10sp"
	    android:textSize="10pt"
	    android:textColor="#00FF00"    
	    android:text="查询记录" />
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="字段：" />
	<Spinner android:id="@+id/SPN_COLUMNS"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:entries="@array/columns"/>
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="比较符：" />
	<Spinner android:id="@+id/SPN_OPERATORS"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:entries="@array/operators"/>	    
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="查询值：" />
	<EditText android:id="@+id/TEXT_QUERY_VALUE"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" />
	<TableLayout 
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:padding="20dp"
	    android:stretchColumns="1">
	    <TableRow>	   
			<Button android:id="@+id/BTN_QUERY"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:text="查询" />
			<Button android:id="@+id/BTN_DISCARD"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:text="取消" />		    
		</TableRow>
	</TableLayout>	    	    		    	    	    
</LinearLayout>