<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">
	<ZoomButton android:id="@+id/BTN_ZOOMIN"
		android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:src="@drawable/zoomin"
	    android:padding="8sp"/>
	<ZoomButton android:id="@+id/BTN_ZOOMOUT"
		android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:src="@drawable/zoomout"
	    android:padding="8sp"/>		    	  
	<ZoomControls android:id="@+id/BTN_ZOOMCTRL"
		android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>	
	<ProgressBar android:id="@+id/PBAR_VOL"
		android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:max="100"
	    android:progress="50"/>	   
	<SeekBar android:id="@+id/SBAR_VOL"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:padding="12sp"
		android:max="100"
		android:stepSize="5"
		android:progress="50"/>
	<RatingBar android:id="@+id/RBAR_VOL"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
		android:max="5"
		android:numStars="5"
		android:stepSize="0.5"
		android:rating="1"
		android:progress="2"/>
	<DatePicker android:id="@+id/DP_CTRL"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>
	    <!-- 选择按钮 -->
	<Button android:id="@+id/BTN_ACT"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:text="选择"/>	    		 		     	      
</LinearLayout>